<Layouts::PageSection ...attributes>
    {{!-- Section headings --}}
    <div class="row">
        <div class="col">
            <span class="section-title">About Me</span>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <span class="section-subtitle">A Little About Myself</span>
        </div>
    </div>

    {{!-- Section content --}}

    <div class="row mt-4">

        <div class="col-md-4">
            <img src="img/about-section/me.jpeg" class="shadow" style="max-width: 18rem;"/> 
        </div>

        <div class="col-md-4 align-middle">

            <center>
                <div class="card border-light mb-3 shadow" style="max-width: 25rem;">
                    <div class="card-header">Summary</div>
                    <div class="card-body">
                        <p class="card-text text-left">My name is <b>Louis Ronald</b>, and I am 
                            a <b>software developer</b>. I love solving problems creatively. 
                            I'm always looking for new challenges, and am a big fan of Open Source.</p>
                    </div>
                </div>
            </center>

        </div>

        <div class="col-md-4 align-middle">

            <center>
                <div class="card border-light mb-3 shadow" style="max-width: 25rem;">
                <div class="card-header">Education</div>
                <div class="card-body">
                    <p class="card-text text-left">I have a Bachelor's Degree in 
                        <b>Mathematics and Computing Science</b> from 
                        <a href="https://www.dwu.ac.pg">Divine Word University</a>.
                        I graduated with an <b>Academic Award of Excellence</b>, and as 
                        a silver-medal recipient.
                    </p>    
                </div>
                </div>
            </center>

        </div>



    </div>


    <div class="row mt-4">

        <div class="col-md-4 align-middle">

            <center>
                <div class="card border-light mb-3 shadow" style="max-width: 25rem;">
                <div class="card-header">Hobbies</div>
                <div class="card-body">
                    <p class="card-text text-left">I have a variety of interests. I love to
                        read and learn new things, playing the piano, learning new 
                        languages, and experimenting with cryptocurrencies.
                    </p>    
                </div>
                </div>
            </center>

        </div>

    </div>
    
</Layouts::PageSection>